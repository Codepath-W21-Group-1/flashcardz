<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="0dp">

    <TextView
        android:id="@+id/tvFrontText"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:padding="5dp"
        android:paddingBottom="20dp"
        android:shadowRadius="4444"
        android:textAlignment="center"
        tools:text="front_text" />

    <TextView
        android:id="@+id/tvBackText"
        android:layout_width="222dp"
        android:layout_height="98dp"
        android:layout_alignTop="@id/tvFrontText"
        android:layout_alignBottom="@id/tvFrontText"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/tvFrontText"
        android:gravity="center"
        tools:text="back_text" />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignBottom="@id/tvFrontText"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#000000" />

    <View
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvFrontText"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="false"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="2dp"
        android:background="#000000" />

</RelativeLayout>