<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlashcardEditActivity">

    <EditText
        android:id="@+id/etFrontText"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Set the Front Text"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etBackText"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_below="@+id/etFrontText"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Set the Back Text"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/etFrontText"
        tools:layout_editor_absoluteX="-3dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etBackText"
        android:layout_alignParentEnd="true"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBackText" />

</androidx.constraintlayout.widget.ConstraintLayout>